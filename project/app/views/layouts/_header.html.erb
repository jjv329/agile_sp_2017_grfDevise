<header class="mui-appbar mui--z1">
  <div class="mui-container">
    <table width="100%">
      <tr class="mui--appbar-height">
        <td class="mui--text-title"><%= link_to "Chippewa Valleys Rideshare", root_path %></td>
        <td align="right">
          <ul class="mui-list--inline mui--text-body2">
            <li><%= link_to "Ride", static_pages_ride_path %></li>
            <li><%= link_to "Drive", static_pages_drive_path %></li>
						<% if user_signed_in? %>
						<li><%= link_to "Sign up", destroy_user_session_path %></li>
